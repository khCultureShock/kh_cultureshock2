	<select id="selectOnePlay" parameterType="int" resultType="Play">
		SELECT ART_NO,ART_IMG,ART_TITLE,ART_AREA 
		FROM ART WHERE ART_NO = #{artNo}
	</select>
	
	<!-- <select id="selectAttachmentList" parameterType="int" resultType="Attachment">
		SELECT *FROM ATTACHMENT WHERE NOTICENO = #{ noticeNo }
	</select> -->
	
	<update id="updateReadCount" parameterType="int">
		UPDATE PLAY SET PLAYREADCOUNT = PLAYREADCOUNT + 1 WHERE PLAYNO = #{ playNo }
	</update>
	
	<update id="updatePlay" parameterType="Play">
		UPDATE PLAY SET PLAYTITLE = #{ playTitle }, PLAYCONTENT = #{ playContent }
		WHERE PLAYNO = #{ playNo }
	</update>
	
