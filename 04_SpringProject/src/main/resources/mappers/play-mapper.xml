<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="playSQL">

	<select id="selectPlayList" resultType="com.kh.spring.play.model.vo.Play">
		SELECT A.ART_NO,ART_IMG,ART_TITLE,ART_AREA, (SELECT COUNT(*) FROM ATTACHMENT WHERE ART_NO = A.ART_NO)FILECOUNT 
		FROM ART A
		ORDER BY ART_NO ASC
		<!-- SELECT P.*, (SELECT COUNT(*) FROM ATTACHMENT WHERE PLAYNO = P.PLAYNO)FILECOUNT 
		FROM PLAY P
		ORDER BY PLAYDATE DESC, PLAYNO DESC -->
		<!-- SELECT ART_NO,ART_IMG,ART_TITLE,ART_AREA FROM ART ORDER BY ART_NO DESC -->
	</select>
	
	<select id="selectPlayTotalContents" resultType="int">
		SELECT COUNT(*) FROM ART
	</select>
	
	<insert id="insertPlay" parameterType="Play">
		INSERT INTO PLAY (PLAYNO, PLAYTITLE, PLAYWRITER, PLAYCONTENT)
		VALUES (SEQ_PLAYNO.NEXTVAL, #{ playTitle }, #{ playWriter }, #{ playContent })
		<!-- <selectKey keyProperty="boardNo" resultType="_int" order="AFTER">
			SELECT SEQ_BOARDNO.CURRVAL FROM DUAL
		</selectKey> -->
	</insert>
	
